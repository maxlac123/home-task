			<form class="edit-form" onsubmit={{action "submitForm"}}>
				<div class="form-group row">
					<label for="inputSurname" class="col-sm-2 col-form-label text-right">Фамилия</label>
					<div class="col-sm-10">
						{{input type="text" class="form-control form-control-lg" placeholder="Введите фамилию" value=family}}
					</div>
				</div>
				<div class="form-group row">
					<label for="inputName" class="col-sm-2 col-form-label text-right">Имя</label>
					<div class="col-sm-10">
						{{input type="text" class="form-control form-control-lg" placeholder="Введите имя" value=name}}
					</div>
				</div>
				<div class="form-group row">
					<label for="inputPatronymic" class="col-sm-2 col-form-label text-right big">Отчество</label>
					<div class="col-sm-10">
						{{input type="text" class="form-control form-control-lg" placeholder="Введите отчество" value=surname}}
					</div>
				</div>
				<div class="form-group row">
					<div class="col-12 text-right">
						<button type="submit" class="btn btn-primary btn-lg">Сохранить</button>
						<button type="submit" class="btn btn-outline-secondary btn-lg">Отмена</button>
					</div>
				</div>
			</form>